<%= form_for(@post, html: { class: "pure-form pure-form-aligned" }) do |f| %>
  <fieldset>
    <div class="pure-control-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: 'Title' %>
    </div>

    <div class="pure-control-group">
      <%= f.label :body %>
      <%= f.text_area :body, placeholder: 'Body' %>
    </div>

    <div class="pure-controls">
      <%= f.submit class: "pure-button" %>
    </div>
  </fieldset>
<% end %>
